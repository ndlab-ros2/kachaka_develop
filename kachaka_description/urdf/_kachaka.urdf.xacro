<?xml version="1.0"?>
<robot name="kachaka_robot"
       xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="kachaka_robot" params="parent *origin">
    <link name="base_link">
      <inertial>
        <mass value="10.0" />
        <origin xyz="0.0435 0.0 0.0475"
                rpy="0 0 0" />
        <inertia ixx="${1/12*10*(0.095**2+0.240**2)}" ixy="0" ixz="0"
                iyy="${1/12*10*(0.095**2+0.387**2)}" iyz="0"
                izz="${1/12*10*(0.387**2+0.240**2)}" />
      </inertial>
      <visual>
	<origin rpy="0 0 0" xyz="-0.150 -0.120 0.0"/>
	<geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/body.stl"/>
	</geometry>
        <material name="body" />
      </visual>
      <collision>
        <origin xyz="0.0435 0.0 0.0475"
                rpy="0 0 0" />
        <geometry>
          <box size="0.387 0.240 0.095" />
        </geometry>
        <material name="body" />
      </collision>
    </link>
    <joint name="lidar_joint"
          type="fixed">
      <parent link="base_link" />
      <child link="laser_frame" />
      <origin rpy="0 0 ${PI / 2.0}"
              xyz="0.156 0 0.1049" />
    </joint>
    <joint name="docking_joint"
          type="prismatic">
      <parent link="base_link" />
      <child link="docking_link" />
      <axis xyz="0 0 1.0" />
      <origin rpy="0 0 0"
              xyz="0 0 0" />
      <limit lower="0.0"
            upper="0.012"
            effort="1.0"
            velocity="1.0" />
    </joint>
    <joint name="camera_front_joint"
          type="fixed">
      <parent link="base_link" />
      <child link="camera_front_link" />
      <origin rpy="-${PI / 2.0} 0 -${PI / 2.0}"
              xyz="${0.2196 - 0.01} 0 0.070" />
    </joint>
    <joint name="camera_back_joint"
          type="fixed">
      <parent link="base_link" />
      <child link="camera_back_link" />
      <origin rpy="-${PI / 2.0} 0 ${PI / 2.0}"
              xyz="${-0.150 + 0.01} 0 0.070" />
    </joint>
    <joint name="tof_joint"
          type="fixed">
      <parent link="base_link" />
      <child link="tof_link" />
      <origin rpy="-${PI / 4.0} 0 -${PI / 2.0}"
              xyz="0.221 0.0 0.0418" />
    </joint>
    <link name="base_r_drive_wheel_link">
      <inertial>
        <mass value="0.2" /> <!-- TODO - Update mass value -->
        <origin xyz="0 0 0"
                rpy="${PI / 2.0} 0 0" />
        <!-- Bug - inertial rotation is not reflected in Rviz2 -->
        <!-- https://github.com/ros2/rviz/pull/1316 -->
        <inertia ixx="${1/12*0.2*(3*0.045**2+0.025**2)}" ixy="0" ixz="0"
                iyy="${1/12*0.2*(3*0.045**2+0.025**2)}" iyz="0"
                izz="${1/2*0.2*(0.045**2)}" />
      </inertial>
      <visual>
	<origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/right_tire.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="tire" />
      </visual>
      <collision>
        <origin xyz="0 0 0"
                rpy="${PI / 2.0} 0 0" />
        <geometry>
          <cylinder length="0.025"
                    radius="0.045" />
        </geometry>
        <material name="tire" />
      </collision>
    </link>
    <link name="laser_frame" />
    <link name="docking_link">
      <inertial>
        <mass value="0.2" /> <!-- TODO - Update mass value -->
        <origin xyz="0 0 0.1075"
                rpy="0 0 0" />
        <inertia ixx="${1/12*0.2*(3*0.025**2+0.015**2)}" ixy="0" ixz="0"
                 iyy="${1/12*0.2*(3*0.025**2+0.015**2)}" iyz="0"
                 izz="${1/2*0.2*(0.025**2)}" />
      </inertial>
      <visual>
	<geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/solenoid.stl"
		scale="1.0 1.0 1.0" />
	</geometry>
        <material name="body" />
      </visual>
      <collision>
        <origin xyz="0 0 0.1075"
                rpy="0 0 0" />
        <geometry>
          <cylinder length="0.015"
                    radius="0.025" />
        </geometry>
        <material name="body" />
      </collision>
    </link>
    <link name="camera_front_link" />
    <link name="camera_back_link" />
    <link name="tof_link" />
    <link name="base_l_drive_wheel_link">
      <inertial>
        <mass value="0.2" />
        <origin xyz="0 0 0"
                rpy="${PI / 2.0} 0 0" />
        <!-- Bug - inertial rotation is not reflected in Rviz2 -->
        <!-- https://github.com/ros2/rviz/pull/1316 -->
        <inertia ixx="${1/12*0.2*(3*0.045**2+0.025**2)}" ixy="0" ixz="0"
                iyy="${1/12*0.2*(3*0.045**2+0.025**2)}" iyz="0"
                izz="${1/2*0.2*(0.045**2)}" />
      </inertial>
      <visual>
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/left_tire.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="tire" />
      </visual>
      <collision>
        <origin xyz="0 0 0"
                rpy="${PI / 2.0} 0 0" />
        <geometry>
          <cylinder length="0.025"
                    radius="0.045" />
        </geometry>
        <material name="tire" />
      </collision>
    </link>
    <joint name="base_footprint_joint"
          type="fixed">
      <parent link="${parent}" />
      <child link="base_link" />
      <xacro:insert_block name="origin" />
    </joint>
    <joint name="base_r_drive_wheel_joint"
          type="continuous">
      <parent link="base_link" />
      <child link="base_r_drive_wheel_link" />
      <origin rpy="0 0 0"
              xyz="0.0 -0.100 0.045" />
      <axis xyz="0 1 0" />
      <limit velocity="10"
            effort="100" />
    </joint>
    <joint name="base_l_drive_wheel_joint"
          type="continuous">
      <parent link="base_link" />
      <child link="base_l_drive_wheel_link" />
      <origin rpy="0 0 0"
              xyz="0.0 0.100 0.045" />
      <axis xyz="0 1 0" />
      <limit velocity="10"
            effort="100" />
    </joint>
    <link name="imu_link" />
    <joint name="imu_joint"
          type="fixed">
      <parent link="base_link" />
      <child link="imu_link" />
      <origin rpy="0 0 0"
              xyz="0.0756 -0.0655 0.05146" />
    </joint>

    
    <link name="livox_frame">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.05"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.05"/>
        </geometry>
      </collision>
    </link>
    
    <joint name="livox_joint" type="fixed">
      <parent link="base_link"/>
      <child link="livox_frame"/>
      <!-- 上方5cm -->
      <origin xyz="0.2 0 0.25" rpy="0 0.66 0"/>
    </joint>
    
    <joint name="base_to_shelf_base" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_base_link"/>
      <origin xyz="0 0 0"/>
    </joint>    


    <!-- ここからはシェルフのモデルコード(3段構成) -->
    <link name="shelf_base_link"/>
        <!-- 一番下の台のlink -->
    <link name="shelf_under_plate_link">
      <visual>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <material name="gray_material">
          <color rgba="${gray}"/>
        </material>
        <!-- origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/ -->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <!--origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/-->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </collision>
    </link>

    <!-- 真ん中の台のlink -->
    <link name="shelf_middle_plate_link">
      <visual>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <material name="gray_material">
          <color rgba="${gray}"/>
        </material>
        <!-- origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/ -->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <!--origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/-->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </collision>
    </link>

      <!-- 一番上の台のlink -->
    <link name="shelf_top_plate_link">
      <visual>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <material name="gray_material">
          <color rgba="${gray}"/>
        </material>
        <!-- origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/ -->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://kachaka_description/meshes/kachaka/kachaka_shelf_plate.stl" scale="1 1 1"/> <!-- PlateのSTLファイル -->
        </geometry>
        <!--origin xyz="-0.13 0 -${shelf_distance_long}" rpy="0 0 1.5708"/-->
        <origin xyz="-0.13 0 0" rpy="0 0 1.5708"/>
      </collision>
    </link>

    <link name="shelf_pole_link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
        <material name="gray">
          <color rgba="${gray}"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
      </collision>
    </link>

    <link name="shelf_pole_link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
        <material name="gray">
          <color rgba="${gray}"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
      </collision>
    </link>

    <link name="shelf_pole_link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
        <material name="gray">
          <color rgba="${gray}"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
      </collision>
    </link>

    <link name="shelf_pole_link_4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
        <material name="gray">
          <color rgba="${gray}"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.018" length="0.67"/>
        </geometry>
      </collision>
    </link>

    <!-- Joint between Base and Middle Plate -->
    <joint name="base_to_under" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_under_plate_link"/>
      <origin xyz="0 0 -0.165"/> <!-- Z軸方向に0.15m上 -->
    </joint>

    <!-- Joint between Middle and Top Plate -->
    <joint name="under_to_middle" type="fixed">
      <parent link="shelf_under_plate_link"/>
      <child link="shelf_middle_plate_link"/>
      <origin xyz="0 0 ${shelf_distance_short}"/> <!-- Z軸方向に0.15m上 -->
    </joint>

        <!-- Joint between Middle and Top Plate -->
    <joint name="middle_to_top" type="fixed">
      <parent link="shelf_middle_plate_link"/>
      <child link="shelf_top_plate_link"/>
      <origin xyz="0 0 ${shelf_distance_short}"/> <!-- Z軸方向に0.15m上 -->
    </joint>

    <joint name="pole_joint_1" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_pole_link_1"/>
      <origin xyz="0.112 0.172 0.4" rpy="0 0 0"/>
    </joint>
    
    <joint name="pole_joint_2" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_pole_link_2"/>
      <origin xyz="0.112 -0.22 0.4" rpy="0 0 0"/>
    </joint>

    <joint name="pole_joint_3" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_pole_link_3"/>
      <origin xyz="-0.112 0.172 0.4" rpy="0 0 0"/>
    </joint>

    <joint name="pole_joint_4" type="fixed">
      <parent link="base_link"/>
      <child link="shelf_pole_link_4"/>
      <origin xyz="-0.112 -0.22 0.4" rpy="0 0 0"/>
    </joint>

  </xacro:macro>
</robot>
